{
  "name": "luca",
  "version": "1.0.0",
  "description": "Asistente IA que ve tu pantalla y te asiste en tiempo real",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "build:electron": "electron-builder",
    "preview": "vite preview"
  },
  "keywords": ["electron", "ai", "assistant", "ollama"],
  "author": "Ricardo Cabrera",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "active-win": "^8.2.1",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "screenshot-desktop": "^1.15.3"
  },
  "build": {
    "appId": "com.luca-asistente",
    "productName": "LUCA - Asistente IA",
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    }
  }
}